<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEDED">

        <ImageView
            android:id="@+id/usermainhomeRecissuerqbookimg"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginStart="8dp"
            android:padding="5dp"
            android:src="@drawable/ic_book"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/usermainhomeRecissuerqbookname"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:text="Book Name"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/usermainhomeRecissuerqbookimg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/usermainhomeRecissuerqauthorname"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="Author Name"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/usermainhomeRecissuerqbookimg"
            app:layout_constraintTop_toBottomOf="@+id/usermainhomeRecissuerqbookname"
            app:layout_constraintVertical_bias="0.25" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>